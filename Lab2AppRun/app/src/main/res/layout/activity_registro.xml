<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="lab2apprun.gr3.compumovil.udea.edu.co.lab2apprun.Registro">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:id="@+id/UserViewReg"
        android:layout_alignBottom="@+id/UserTextReg"
        android:layout_alignRight="@+id/EmailViewReg"
        android:layout_alignEnd="@+id/EmailViewReg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/UserTextReg"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/PassViewReg"
        android:layout_toEndOf="@+id/PassViewReg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass"
        android:id="@+id/PassViewReg"
        android:layout_gravity="center_vertical"
        android:layout_alignBaseline="@+id/PassTextReg"
        android:layout_alignBottom="@+id/PassTextReg"
        android:layout_toLeftOf="@+id/PassTextReg"
        android:layout_toStartOf="@+id/PassTextReg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PassTextReg"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_below="@+id/UserTextReg"
        android:layout_alignLeft="@+id/EmailTextReg"
        android:layout_alignStart="@+id/EmailTextReg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/EmailViewReg"
        android:layout_gravity="left|bottom"
        android:layout_below="@+id/PassTextReg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/EmailTextReg"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="1"
        android:layout_above="@+id/CancelReg"
        android:layout_toRightOf="@+id/UserViewReg"
        android:layout_toEndOf="@+id/UserViewReg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/CancelReg"
        android:layout_gravity="right|top"
        android:layout_below="@+id/SingInReg"
        android:layout_alignLeft="@+id/SingInReg"
        android:layout_alignStart="@+id/SingInReg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sing In"
        android:id="@+id/SingInReg"
        android:onClick="Registro"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_alignBaseline="@+id/EmailViewReg"
        android:layout_alignBottom="@+id/EmailViewReg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
